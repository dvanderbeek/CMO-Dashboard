<div class="post">
	<div class="date">
		Posted <%= time_ago_in_words(post.created_at) %> ago to <%= post.site.name %>
	</div>
	<div class="icon">
		<% if post.post_type == "Document" %>
			<%= link_to raw('<i class="icon-file"></i>'), post.document.url %>
		<% elsif post.post_type == "News" %>
			<%= link_to raw('<i class="icon-bullhorn"></i>'), post %>
		<% elsif post.post_type == "Photo" %>
			<%= link_to(image_tag(post.photo.url(:thumb)), post.photo.url(:large), :class => "fancybox") %>
		<% end %>
	</div>
	<h4 class="title">
		<%= post.title %>
	</h4>
	<div class="content">
		<%= post.content %>
	</div>
	<div class="controls">
		<%= link_to raw('<i class="icon-pencil" rel="tooltip" title="Edit Post"></i>'), edit_post_path(post) %>
		<%= link_to raw('<i class="icon-trash" rel="tooltip" title="Delete Post"></i>'), post, confirm: 'Are you sure?', method: :delete %>
	</div>
	<div class="clearfix"></div>
</div>