<% content_for :dashboard do %>
<div class="toolbar">
	<h3>All Posts</h3>
</div>
<div id="posts">
	<% if @posts.length > 0 %>
		<%= render @posts %>
	<% else %>
		<p class="no_content">No posts to display!</p>
	<% end %>
</div>

<% end %>
<% content_for :sidebar do %>
	<%= render 'shared/sidebar' %>
<% end %>