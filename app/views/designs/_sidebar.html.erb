<div style="padding: 20px;">
	<!-- <span class="label label-info">Search Filter 1 <i class="icon-remove" style="font-size: 8px; cursor: pointer; position: relative; top: -1px; margin-left: 2px;"></i></span>
	<span class="label label-info">Filter 2  <i class="icon-remove" style="font-size: 8px; cursor: pointer; position: relative; top: -1px; margin-left: 2px;"></i></span> -->
	<h3>Your Sites</h3>
	<table class="table" style="margin-top: 18px;">
				<tbody>
			<% if @sites.length == 0 %>
				<p class="no_content">You haven't created any sites yet.  Add one to get started!</p>
			<% else %>
				<% @sites.each do |site| %>
					  <tr>
					    <td><%= link_to site.name, dashboard_path(:site => site.id ) %></td>
					    <td><%= link_to raw('<i class="icon-eye-open" rel="tooltip" title="View Site"></i>'), site %></td>
					    <td><%= link_to raw('<i class="icon-group" rel="tooltip" title="Members"></i>'), site_members_path(site) %></td>
					    <td><%= link_to raw('<i class="icon-cogs" rel="tooltip" title="Site Settings"></i>'), edit_site_path(site) %></td>
					    <td><%= link_to raw('<i class="icon-trash" rel="tooltip" title="Delete Site"></i>'), site, confirm: 'Are you sure?', method: :delete, :style => "padding: 5px;" %></td>
					  </tr>
				<% end %>
					</tbody>
				</table>
			<% end %>
			<%= link_to raw('<i class="icon-plus"></i> New Site'), new_site_path, :class => 'btn', :id => "add_site" %>
</div>