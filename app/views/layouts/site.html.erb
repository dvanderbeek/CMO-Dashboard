<!DOCTYPE html>
<html>
<head>
  <title>Condo Motion</title>
  <%= stylesheet_link_tag    "site", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container-fluid">
	<% if !notice.nil? %>
	 <p class="alert alert-info"><%= notice %></p>
	<% end %>
	<% if !alert.nil? %>
	 <p class="alert alert-error"><%= alert %></p>
	<% end %>

	<div id="site">
<div class="row-fluid">
	<div class="span3" id="sidebar">
		<div id="info">
			<h1><%= @site.name %></h1>
			<address>
	      <%= raw @site.address %>
	    </address>
		</div>
	</div>
	<div class="span9">
		<div id="nav">
			<ul>
				<li><%= link_to "Home", "#", :class => "active" %></li>
				<li><%= link_to "Gallery", "#" %></li>
				<li><%= link_to "Documents", "#" %></li>
				<li><%= link_to "News", "#" %></li>
				<li><%= link_to "Contact", "#" %></li>
			</ul>
		</div>

		<%= yield %>

	</div>
</div>
</div>

<% if (current_user && (@site.user_id == current_user.id)) %>
<div id="edit_links">
	<%= link_to 'Edit', edit_site_path(@site) %> |
	<%= link_to 'Dashboard', dashboard_path %>
</div>
<% end %>


</div>

</body>
</html>
